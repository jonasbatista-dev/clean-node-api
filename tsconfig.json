{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es6",
    "types": ["node", "jest"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "allowJs": true,
    "moduleResolution": "node",
    "verbatimModuleSyntax": false
  },
  "include": ["src/**/*"],
  "exclude": ["dist"]
}
